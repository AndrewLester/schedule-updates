{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": ["client/**/*"],
    "exclude": ["node_modules/*", "migrations/**/*", "app/**/*", "logs/**/*"],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "module": "ES6",
        "target": "ES6",
        "sourceMap": true,
        "assumeChangesOnlyAffectDirectDependencies": false
    }
}
